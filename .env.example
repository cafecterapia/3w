###############################################
# Sample Environment File (.env.example)
# Copy to .env for local dev: cp .env.example .env
# Fill in secrets before running prisma generate / next dev
###############################################

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/yourdb?schema=public"
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/yourdb?schema=public" # optional direct connection (no pooling)

# If deploying with Vercel Postgres you may have these instead (set in dashboard):
# POSTGRES_PRISMA_URL (recommended primary for Prisma)
# POSTGRES_URL (pooled)
# POSTGRES_URL_NON_POOLING (direct / long-running scripts)
# This project auto-maps those to DATABASE_URL / DIRECT_DATABASE_URL if the latter are unset.

# NextAuth (rename any legacy AUTH_SECRET/AUTH_URL to these)
NEXTAUTH_SECRET="generate-a-long-random-string"
NEXTAUTH_URL="http://localhost:3000"

# EFI Payment Gateway
EFI_CLIENT_ID="your-efi-client-id"
EFI_CLIENT_SECRET="your-efi-client-secret"
EFI_ENVIRONMENT="sandbox" # or production
EFI_WEBHOOK_SECRET="replace-with-random-string"
EFI_CERTIFICATE_PATH="./certs/producao-810733-3WT.p12"
EFI_CERTIFICATE_PASSWORD="password-if-needed"
EFI_PIX_KEY="your-pix-key"

# Push Notifications
VAPID_PUBLIC_KEY="your-generated-vapid-public"
VAPID_PRIVATE_KEY="your-generated-vapid-private"
VAPID_EMAIL="you@example.com"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-generated-vapid-public" # duplicated for client exposure

# Internal API key (for internal endpoints auth)
INTERNAL_API_KEY="random-string"

# OAuth Providers (optional)
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"
AUTH_GITHUB_ID="your-github-client-id"
AUTH_GITHUB_SECRET="your-github-client-secret"
